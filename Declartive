pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                    pwd
                '''
            }
        }
        stage('Clone') {
            steps {
                sh 'git clone -b test git@github.com:rama2027/love.git'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                    pwd
                '''
            }
        }
             stage('Describe') {
            steps {
                sh 'pwd'
                sh 'cd $WORKSPACE/love'
                sh 'pwd'
                sh 'love.sh'
                sh 'pwd'
                sh 'cd $JOB_NAME/love'
                sh 'pwd'
                sh 'love.sh'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                    pwd
                '''
            }
        }
        stage("Clean")
        {
        steps
        {
cleanWs()
}
}
}
}
